{
  "name": "sage",
  "private": true,
  "scripts": {
    "build": "bud build",
    "dev": "bud dev",
    "lint": "yarn dlx concurrently 'npm:lint:*'",
    "lint:css": "stylelint \"resources/**/*.{css,scss,vue}\"",
    "lint:js": "eslint resources/scripts",
    "prettier": "yarn dlx concurrently 'npm:prettier:*'",
    "prettier:css": "prettier {**/*,*}.{css,scss,vue} --write --no-error-on-unmatched-pattern",
    "prettier:js": "prettier {**/*,*}.{js,ts,jsx,tsx} --write --no-error-on-unmatched-pattern",
    "prettier:other": "prettier {**/*,*}.{json,md} --write --no-error-on-unmatched-pattern",
    "prettier:php": "prettier {**/*,*}.{php} --write --no-error-on-unmatched-pattern",
    "test": "npm run lint"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "devDependencies": {
    "@prettier/plugin-php": "^0.17.6",
    "@roots/bud": "^5.0.0",
    "@roots/sage": "^5.0.0",
    "@wordpress/browserslist-config": "4.1.0",
    "@yarnpkg/plugin-dlx": "^3.1.1",
    "autoprefixer": "^10.4.1",
    "concurrently": "^6.5.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^37.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "postcss": "8.4.5",
    "postcss-import": "14.0.2",
    "postcss-nested": "5.0.6",
    "postcss-preset-env": "7.1.0",
    "prettier": "^2.5.1",
    "prettier-plugin-jsdoc": "^0.3.30",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "^3.0.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bud": {
    "location": {
      "src": "resources",
      "dist": "public"
    }
  },
  "packageManager": "yarn@3.2.0-rc.9"
}
